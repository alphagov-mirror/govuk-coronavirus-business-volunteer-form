<% content_for :title do %><%= t('coronavirus_form.offer_care.title') %><% end %>
<% content_for :meta_tags do %>
  <meta name="description" content="<%= t('coronavirus_form.offer_care.title') %>" />
<% end %>

<% content_for :back_link do %>
  <%= render "govuk_publishing_components/components/back_link", { href: previous_path } %>
<% end %>

<%= form_tag({},
  "data-module": "track-coronavirus-form-offer-care",
  "data-question-key": "offer_care",
  "id": "offer_care"
) do %>
<%= render "govuk_publishing_components/components/radio", {
  heading: t('coronavirus_form.offer_care.title'),
  is_page_heading: true,
  name: "offer_care",
  error_message: error_items('offer_care'),
  items: t('coronavirus_form.offer_care.options').map do |_, item|
    {
      value: item[:label],
      text: item[:label],
      checked: session[:offer_care] == item[:label],
    }
  end
} %>
<%= render "govuk_publishing_components/components/button", text: "Save and continue", margin_bottom: true %>
<% end %>
