<% content_for :title do %><%= t("check_your_answers.title") %><% end %>
<% content_for :meta_tags do %>
  <meta name="description" content="<%= t("check_your_answers.title") %>" />
<% end %>

<% content_for :back_link do %>
  <%= render "govuk_publishing_components/components/back_link", { href: previous_path } %>
<% end %>

<%= render "govuk_publishing_components/components/title", {
  title: t("check_your_answers.title"),
  margin_top: 0,
  margin_bottom: 8,
} %>

<div class="govuk-!-margin-bottom-8">
  <% sections.each do |section| %>
    <%= render "coronavirus_form/check_your_answers/sections/#{section}" %>
  <% end %>
</div>

<%= render "govuk_publishing_components/components/inset_text", {
  text: t("check_your_answers.confirmation")
} %>

<%= form_tag({},
  "data-module": "track-coronavirus-form-business-check-your-answers",
  "id": "check_your_answers",
  "novalidate": "true"
) do %>
  <%= render "govuk_publishing_components/components/button",
    text: t("check_your_answers.submit"),
    "module": "govuk-button",
    "prevent-double-click": "true",
    margin_bottom: true %>
<% end %>
